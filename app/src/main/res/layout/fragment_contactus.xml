<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/whitee"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_fours"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"


        android:layout_marginTop="15dp"
        android:gravity="fill_vertical"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/logo_above"
            android:fontFamily="@font/sf_pro_display_medium"
            android:lineHeight="21sp"
            android:lineSpacingExtra="3sp"
            android:text="Have a question?"
            android:textColor="@color/color_1"
            android:textSize="24sp"
            tools:text="Have a question?" />



        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:gravity="left"
            android:lineSpacingExtra="2sp"
            android:text="If you are having trouble using our app or you\n are just curious please contact us."
            android:textColor="#222f3e"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_above"
            tools:text="If you are having trouble using our app or you\n are just curious please contact us." />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout

       android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="10dp"

            android:textColor="@color/color_2"
            android:textColorHint="@color/powder_blue"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:hint="Enter your name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cu_bg"/>
        <EditText
            android:layout_marginTop="10dp"
            android:textColor="@color/color_2"
            android:textColorHint="@color/powder_blue"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:hint="Enter your e-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cu_bg"/>
        <EditText
            android:layout_marginTop="10dp"
            android:textColor="@color/color_2"
            android:textColorHint="@color/powder_blue"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:hint="Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cu_bg"/>
        <EditText
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:gravity="top"

            android:textColor="@color/color_2"
            android:textColorHint="@color/powder_blue"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:hint="Write here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cu_bg1"/>

        <RelativeLayout
            android:background="@drawable/cu_bg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="send"
                android:textSize="14sp"
                android:textColor="@color/whitee"
                />
        </RelativeLayout>



    </LinearLayout>






</LinearLayout>