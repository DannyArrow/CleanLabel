<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/bg_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/sb_bg" />

    <LinearLayout

        android:layout_centerVertical="true"

        android:orientation="vertical"

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="left"
            android:lineSpacingExtra="2sp"
            android:text="Regular"
            android:textColor="@color/color_2"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_above"
            tools:text="Regular" />

         <TextView
             android:gravity="center"
             android:layout_gravity="center"

        android:id="@+id/logo_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"


        android:fontFamily="@font/sf_pro_display_medium"
        android:lineHeight="21sp"
        android:lineSpacingExtra="3sp"
        android:text="$25"
        android:textColor="@color/color_1"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$25" />

        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"


            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="9sp"
            android:textColor="@color/color_2"

            android:layout_weight="1"
            android:text="Per month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"


            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="8sp"
            android:textColor="@color/color_1"

            android:layout_weight="1"
            android:text="one month subscription that will grant you\nspecial discounts and more than 20 washes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/check_box"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_sb_selector"


            android:checked="true"
            android:textColor="@color/whitee" />
    </LinearLayout>




</RelativeLayout>