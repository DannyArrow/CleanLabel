<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:text="Choose your detergent and softener"
                android:textColor="#222f3e"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Choose your detergent and softener" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/whitee">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:fontFamily="@font/sf_pro_display_medium"
                android:gravity="center_horizontal"
                android:lineHeight="21sp"
                android:lineSpacingExtra="3sp"
                android:text="Fabric Softner"
                android:textColor="#222f3e"
                android:textSize="18sp"
                tools:text="Fabric Softner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"


                    android:fontFamily="@font/sf_pro_display_regular"

                    android:lineHeight="16sp"
                    android:lineSpacingExtra="2sp"
                    android:text="Please specify softner"
                    android:textColor="#576574"
                    android:textSize="14sp"

                    tools:text="Please specify softner" />

                <!--<TextView-->
                    <!--android:layout_width="250dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:layout_gravity="center_vertical"-->

                    <!--android:layout_marginRight="15dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/box"-->
                    <!--android:drawableEnd="@drawable/down_arrow"-->
                    <!--android:drawableRight="@drawable/down_arrow"-->
                    <!--android:fontFamily="@font/sf_pro_display_medium"-->
                    <!--android:gravity="center"-->
                    <!--android:lineHeight="14sp"-->
                    <!--android:lineSpacingExtra="2sp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:text="No Softner"-->
                    <!--android:textColor="#576574"-->
                    <!--android:textSize="12sp"-->
                    <!--tools:text="No Softner" />-->

                <RelativeLayout
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_width="280dp"
                    android:layout_height="32dp"
                    android:background="@drawable/box">
                    <Spinner
                       android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/spinner"
                        android:textColor="#576574"
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/sf_pro_display_medium"

                    android:lineHeight="21sp"
                    android:lineSpacingExtra="3sp"
                    android:text="Bleach"
                    android:textColor="#222f3e"
                    android:textSize="18sp"

                    tools:text="Bleach" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"


                        android:fontFamily="SFProDisplay-Regular"

                        android:lineHeight="16sp"
                        android:lineSpacingExtra="2sp"
                        android:text="Do you require bleach?"
                        android:textColor="#576574"
                        android:textSize="14sp"
                        tools:text="Do you require bleach?" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right">

                        <RelativeLayout
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">


                            <CheckBox
                                android:checked="true"

                                android:id="@+id/check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textColor="@color/whitee"
                                android:button="@drawable/checkbox_selector"/>


                            <!--<ImageView-->
                                <!--android:id="@+id/imageView14555"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->

                                <!--android:layout_centerInParent="true"-->
                                <!--android:src="@drawable/box_check" />-->

                            <!--<ImageView-->
                                <!--android:id="@+id/imageView1555"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_centerInParent="true"-->
                                <!--android:src="@drawable/check" />-->
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:src="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:lineSpacingExtra="3sp"
                        android:text="Total:"
                        android:textColor="#222f3e"
                        android:textSize="18sp"

                        tools:text="Total:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sf_pro_display_bold"

                        android:gravity="right"
                        android:lineHeight="16sp"
                        android:lineSpacingExtra="2sp"
                        android:text="$1.50"
                        android:textColor="#222f3e"
                        android:textSize="14sp"

                        tools:text="$1.50" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:gravity="fill_vertical"
                app:layout_constraintEnd_toStartOf="@+id/textView9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/bg_6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txtview22"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="6sp"
                    android:text="Continue"
                    android:textColor="#222f3e"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView24"
                    app:layout_constraintStart_toStartOf="@+id/imageView24"
                    app:layout_constraintTop_toTopOf="@+id/imageView24"
                    tools:text="Continue" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fourcircle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView19"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/threecircle"
            app:layout_constraintStart_toEndOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/twocircle"
            app:layout_constraintStart_toEndOf="@+id/imageView17"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onecircle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>

