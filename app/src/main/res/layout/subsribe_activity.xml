<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:background="@color/whitee"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@drawable/subscribe_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/top_bars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar_fours"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"


        android:layout_marginTop="60dp"
        android:gravity="fill_vertical"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/clean_wash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/logo_above"
            android:fontFamily="@font/sf_pro_display_medium"
            android:lineHeight="21sp"
            android:lineSpacingExtra="3sp"
            android:text="Have a question?"
            android:textColor="@color/color_1"
            android:textSize="24sp"
            tools:text="Have a question?" />



        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:gravity="left"
            android:lineSpacingExtra="2sp"
            android:text="Subscribe to our service and get unique benefits and promotion that will be cheaper and more effective."
            android:textColor="#222f3e"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_above"
            tools:text="If you are having trouble using our app or you\n are just curious please contact us." />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/plan"
       android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView

            android:id="@+id/selected_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:visibility="visible" />

        <com.example.cleanlabel.ultraviewpager.UltraViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </com.example.cleanlabel.ultraviewpager.UltraViewPager>



    </RelativeLayout>

    <RelativeLayout

        android:layout_below="@+id/plan"
        android:background="@drawable/cu_bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="6sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="14sp"
            android:textColor="@color/whitee"
            />
    </RelativeLayout>
</RelativeLayout>
